function [score] = opti_criterion(joint_angles,robot,p_d,foot_pos,COM_D)


[ Robut_New,COM_X,COM_Y ] = Robut_Maker( robot,joint_angles)


% [robot,robot_com,~] = drc_forward_kinematics(new_robot);

% UPDATE GRAPHICS
draw3(Robut_New);

p = Robut_New.j(29).position_w;
w = [1; 1; 1; 1;];
score = w(1)*(p - p_d)'*(p - p_d) + w(2)*(COM_X-COM_D(1))^2+ w(2)*(COM_Y-COM_D(2))^2;

end